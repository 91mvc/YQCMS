<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    @RenderSection("Seo", false)
    <link href="@Url.Content("~/Content" + @ViewBag.CI.WebPath + "css/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content" + @ViewBag.CI.WebPath + "css/Nav.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content" + @ViewBag.CI.WebPath + "Category.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content" + @ViewBag.CI.WebPath + "Cms.js")" type="text/javascript"></script>
    @RenderSection("Css", false)
</head>
<body>
    <div class="page">
        <div id="header">
           <div class="logo box">
                <div id="title">
                    <h1>@ViewBag.CI.Webtitle</h1>
                    <p class="web-desc">@ViewBag.CI.WebDescription</p>
                </div>
                <div id="logindisplay">
@*                    @Html.Partial("_LogOnPartial")*@
                </div>
            </div>
            <div id="nav" class="menu">
           </div>
        </div>
@*        @Html.Action("GetNav", "Home")*@
        <script type="text/javascript">            
        ViewNav(0, 0);
        </script>
        <div class="clear"/>
        <div id="main" class="box">
            @RenderBody()
        </div>
        <div class="clear"/>
        <div id="footer">
          Powered by <a href="@ViewBag.CI.Weburl">@ViewBag.CI.Webtitle</a> 2012-2020
        </div>
    </div>
</body>
@RenderSection("Js", false)
    <script type="text/javascript">
        $(function () {
            //显示子栏目
            $(".hasSub").hover(function () {
                $(this).find("ul").first().show();
                $(this).addClass("subhover");
            }, function () {
                $(this).children("ul").hide();
                $(this).removeClass("subhover");
            });
        });
    </script>
</html>
